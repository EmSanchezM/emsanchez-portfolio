---
interface Props {
  slug: string;
  imageURL: string;
  title: string;
  description: string;
  technologies: string;
}

import { ArrowLine } from "./icons";

const { slug, title, description, imageURL, technologies } = Astro.props;
---

<div class="project__content">
  <img src={imageURL} alt={`${title} image`} class="project__image" />
  <h3 class="project__title">{title}</h3>
  <p class="project__description">
    {description}
  </p>
  <h4 class="project__title">Technologies</h4>
  <p class="project__description">{technologies}</p>
  <a href="#work" class="project__link"
    >View project
    <ArrowLine />
  </a>
</div>

<style>
  .project__content {
    width: 100%;
    max-width: 30rem;
    justify-self: center;
  }

  .project__img {
    margin-bottom: 3rem;
  }

  .project__title {
    color: var(--white);
    font-size: var(--fs-lg);
    margin-bottom: 1rem;
  }

  .project__description {
    margin-bottom: 2rem;
  }

  .project__link {
    font-size: var(--fs-sm);
    text-transform: uppercase;
    color: var(--white);
    display: flex;
    align-items: center;
    column-gap: 0.5rem;
    transition: var(--transition);
  }

  .project__link:hover {
    color: var(--primary-color);
    column-gap: 1rem;
  }
</style>
