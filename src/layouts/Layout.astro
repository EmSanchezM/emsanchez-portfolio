---
interface Props {
  title: string;
}
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  :root {
    --bg-primary: #1a1a1a;
    --bg-secondary: #242424;
    --bg-footer: #151515;

    --primary-color: #2146c7;
    --primary-color-dark: #0008c1;

    --white: #fff;
    --black: #000;
    --text-color: #908a8a;
    --border-color: #373737;

    --ff-body: system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
    --fs-sm: 1.4rem;
    --fs-md: 1.6rem;
    --fs-lg: 2rem;
    --fs-xl: 2.4rem;
    --fs-xxl: 3.2rem;
    --fs-biggest: clamp(3rem, 8vw, 5rem);

    --fw-regular: 400;
    --fw-medium: 500;
    --fw-semibold: 600;
    --fw-bold: 700;

    --zindex-menu: 1000;
    --zindex-fixed: 1010;

    --width-container: 98rem;
    --height-header: 10rem;
    --height-header--scroll: 8rem;

    --transition: all 0.4s cubic-bezier(0.645, 0.045, 0.355, 1);
    --box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  h1,
  h2,
  h3,
  h4 {
    color: var(--white);
    font-weight: var(--fw-bold);
  }

  html {
    font-size: 62.5%;
    scroll-behavior: smooth;
  }

  body,
  h1,
  h2,
  h3,
  h4,
  ul,
  p {
    margin: 0;
    padding: 0;
  }

  ul {
    list-style-type: none;
  }

  img {
    max-width: 100%;
    display: block;
  }

  a {
    text-decoration: none;
    color: var(--text-color);
  }

  main {
    overflow: hidden;
  }

  body {
    background-color: var(--bg-primary);
    font-family: var(--ff-body);
    font-size: var(--fs-md);
    color: var(--text-color);
    margin-top: var(--height-header);
    line-height: 1.2;
  }

  .container {
    width: 90%;
    max-width: var(--width-container);
    margin: auto;
  }

  .grid {
    display: grid;
    gap: 3rem;
  }

  .section {
    padding: 5rem 0;
  }

  .btn {
    display: inline-block;
    padding: 1.5rem 4rem;
    color: var(--white);
    font-weight: var(--fw-semibold);
    transition: var(--transition);
  }

  .btn--primary {
    background-color: var(--primary-color);
    color: var(--white);
  }

  .btn--primary:hover {
    background-color: var(--primary-color-dark);
  }

  .btn--secondary {
    background-color: var(--white);
    color: var(--color-bg-primary);
  }

  .btn--secondary:hover {
    background-color: var(--primary-color);
    color: var(--white);
  }
</style>
