---
import { ArrowLine } from "../components/icons";
---

<section class="section contact" id="contact">
  <div class="container">
    <header class="contact__header">
      <h2 class="contact__title">Contact</h2>
      <span class="contact__subtitle"
        >Interested in working together? Let's talk</span
      >
    </header>
    <div class="grid contact__wrapper">
      <div class="contact__content">
        <h3 class="contact__title">Email me</h3>

        <a href="#" class="contact__link"
          >Send
          <ArrowLine />
        </a>
      </div>
      <div class="contact__content">
        <h3 class="contact__title">Linkedin</h3>

        <a href="#" class="contact__link"
          >Send
          <ArrowLine />
        </a>
      </div>
      <div class="contact__content">
        <h3 class="contact__title">Github</h3>

        <a
          href="https://github.com/EmSanchezM?tab=repositories"
          target="_blank"
          class="contact__link"
          >Send
          <ArrowLine />
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .contact__header {
    margin: 8rem 0;
    text-align: center;
  }

  .contact__title {
    font-size: var(--fs-xl);
    margin-bottom: 0.5rem;
  }

  .contact__subtitle {
    font-weight: var(--fw-bold);
    font-size: var(--fs-md);
    position: relative;
  }

  .contact__subtitle::after {
    position: absolute;
    content: "";
    width: 50%;
    height: 0.5rem;
    background-color: var(--primary-color);
    bottom: -1.5rem;
    left: 50%;
    transform: translateX(-50%);
  }

  .contact__content {
    width: 100%;
    max-width: 30rem;
    justify-self: center;
  }

  .contact__title {
    color: var(--white);
    font-size: var(--fs-lg);
    margin-bottom: 1rem;
  }

  .contact__link {
    font-size: var(--fs-sm);
    text-transform: uppercase;
    color: var(--white);
    display: flex;
    align-items: center;
    column-gap: 0.5rem;
    transition: var(--transition);
  }

  @media screen and (min-width: 560px) {
    .contact__wrapper {
      grid-template-columns: repeat(2, 250px);
      justify-content: center;
    }
  }

  @media screen and (min-width: 968px) {
    .contact__wrapper {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>
